<%- include('../includes/header')%>
<%- include('../includes/navbar')%>
<%- include('../includes/sidebar')%>
<%- include('../includes/start_content_header')%>
<div class="col-sm-6">
      <h1 class="m-0">clients</h1>
  </div><!-- /.col -->
  <div class="col-sm-6">
    <ol class="breadcrumb float-sm-right">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">clients Page</li>
    </ol>
  </div><!-- /.col -->
<%- include('../includes/end_content_header')%>

<%- include('../includes/start_content')%>


<div class="col-12">
	<div class="card">
	<%if(clients) {%>
		<div class="card-header">
			<a href="/users/clients/add" class="btn btn-success font-weight-bold">Add client</a>
		</div>
		<div class="card-body">
			<table class="table table-bordered">
			    <thead>
			       <tr>
			            <th>Name</th>
			            <th>Email</th>		         
			            <th>phone</th>
			            <th>Opreations</th>
			        </tr>
			   </thead>
			   <tbody>
			   	<% clients.forEach(client => {%>
			       <tr data-widget="expandable-table" aria-expanded="false">
			            <td><%= client.name%></td>
			            <td><%= client.email%></td>
			            <td><%= client.phone%></td>
			            <td>
			            	<a href="/clients/edit/<%=client.id%>" class="btn btn-primary btn-sm d-inline">Edit</a>
			            	<form action="/clients/delete/<%=client.id%>" method='POST' class='d-inline'>
								<input type="hidden" name="_csrf" value="<%= _csrf %>">
			            		<button type="submit" class="btn btn-sm btn-danger">
			            			Delete</button>
			            	</form>
			            	<form action="/clients/useStatus/<%=client.id%>" method='POST' class="d-inline">
			            		<input type="hidden" name="_csrf" value="<%= _csrf %>">
			            		<%if(client.useStatus == false) {%>
			            			<button class="btn btn-sm btn-success">Active</button>
			            		<% } else {%>
			            			<button class="btn btn-sm btn-success">UnActive</button>
			            		<%}%>
			            	</form>
			            </td>
					</tr>
			     <%})%>
			   </tbody>
			</table>
		</div>
	<%}%>
	</div>
</div>
<%- include('../includes/end_content')%>

<%- include('../includes/footer')%>